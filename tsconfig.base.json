{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@shared": ["libs/shared/src/index.ts"],
      "@shared/dtos": ["libs/shared/src/dtos/index.ts"],
      "@shared/entities": ["libs/shared/src/entities/index.ts"],
      "@shared/enums": ["libs/shared/src/enums/index.ts"],
      "@frontend/core": ["apps/frontend/src/app/core"],
      "@frontend/core/*": ["apps/frontend/src/app/core/*"],
      "@frontend/components": ["apps/frontend/src/app/components"],
      "@frontend/components/*": ["apps/frontend/src/app/components/*"],
      "@frontend/features": ["apps/frontend/src/app/features"],
      "@frontend/features/*": ["apps/frontend/src/app/features/*"],
      "@frontend/styles": ["apps/frontend/src/styles"],
      "@frontend/styles/*": ["apps/frontend/src/styles/*"],
      "@backend": ["apps/backend/src/app/"],
      "@backend/*": ["apps/backend/src/app/*"],
      "@backend/envs": ["apps/backend/src/envs"],
      "@backend/envs/*": ["apps/backend/src/envs/*"],
      "@backend/core": ["apps/backend/src/app/core"],
      "@backend/core/*": ["apps/backend/src/app/core/*"],
      "@backend/features": ["apps/backend/src/app/features"],
      "@backend/features/*": ["apps/backend/src/app/features/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
